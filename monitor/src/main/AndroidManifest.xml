        <activity
            android:name=".ui.MonitorActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:taskAffinity="github.leavesc.monitor.singleTask"
            android:theme="@style/MonitorAppTheme" />
